<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.buscaminas">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Buscaminas">
        <activity
            android:name=".activities.MainActivity"
            android:label="Buscaminas"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityHelp"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.ActivityConfig"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.ActivityGame"
            android:exported="true">
        </activity>
        <activity
            android:name=".extra.PopUpFinishGame"
            android:theme="@style/Theme.PopUp"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.ActivityResult"
            android:exported="true">
        </activity>
        <service
            android:name=".service.SoundService"
            android:enabled="true"/>
        <activity
            android:name=".fragments.GamesPlayed"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.DetailActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>